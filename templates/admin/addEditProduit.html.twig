<ol class="breadcrumb">
   <li class="breadcrumb-item"><a href="/admin/trainers">Produit</a></li>
</ol>
    {{ form_start(formProduct, {'attr' : { 'enctype' : 'multipart/form-data'}}) }}
        {{ form_row(formProduct.name, {'attr' : {'placeholder' : 'Saisir le  Nom  du produit ...'}, 'label' : 'Nom du produit'}) }}
