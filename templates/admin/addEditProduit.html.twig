        <input class="form-control" placeholder="test" type="file" name="ImageProduit[produit]" />
        <br>
        <button class="btn btn-success" style="background-color: #2C3E50 " type="submit">Enregistrer</button>
    {{ form_end(formProduct) }}
    <br>
{% endblock %}
